#include <iostream>
#include <vector>
using namespace std;

int main()
{
   int n,k;
   cin>>n>>k;
   int ans=0;
   vector<int> scores(n);
   for(int i=0;i<n;i++){
       cin>>scores[i];
   }
   ans=k;
   for(int i=0;i<k;i++){
       if(scores[i]==0){
           ans--;
       }
   }
   int val=scores[k-1];
   for(int i=k;i<n;i++){
       if(scores[i]>=val && scores[i]!=0)
       ans++;
   }
   cout<<ans<<endl;
   return 0;
}
