
#include <iostream>
#include <vector>
#include <algorithm>
#include <set>
using namespace std;
 
int main()
{
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        vector<int> v(n);
        set<int> s;
        for(int i=0;i<n;i++){
            cin>>v[i];
            s.insert(v[i]);
        }
        if(s.size()==1){
            cout<<"-1"<<endl;
        }
        else{
            int max_val=*max_element(v.begin(),v.end());
            int index=-1;
            for(int i=0;i<n;i++){
                if(v[i]==max_val){
                    index=i;
                    break;
                }
            }
            if(index==0){
                for(int i=index+1;i<n;i++){
                    if(v[i]!=max_val){
                        cout<<i<<endl;
                        break;
                    }
                }
            }
            else{
            cout<<index+1<<endl;   
            }
        }
    }
    
   
   return 0;
}
